{{js "js/dashboard-create.js"}}
<div class="navbar-wrapper">
    <nav class="navbar navbar-default affix-top" data-spy="affix" data-offset-top="85" data-offset-bottom="40">
        <div class="container-fluid">
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="../">
                                <span class="fw-stack">
                                    <i class="fw fw-circle-outline fw-stack-2x"></i>
                                    <i class="fw fw-cancel fw-stack-1x"></i>
                                </span>
                            Cancel
                        </a>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
</div>
<div class="container-fluid">
    <div class="row ues-dashboard">
        <div class="col-md-6">
            <h1 class="page-sub-title">{{i18n "create.a.dashboard"}}</h1>
            <div class="form-group">
                <label for="dashboard-title">
                    {{i18n "name.of.your.dashboard"}} <span class="required">*</span>
                </label>
                <input type="text" name="title" class="form-control" maxlength="250" id="dashboard-title"
                       placeholder="{{i18n "e.g.sales.statistics"}}">
                <label id="title-error" class="required-error hide" for="title">{{i18n "required"}}</label>
            </div>
            <div class="form-group">
                <label for="dashboard-id">
                    {{i18n "url"}} <span class="required">*</span>
                </label>
                <input type="text" name="id" class="form-control" maxlength="100" id="dashboard-id"
                       placeholder="{{i18n "e.g.sales-stats"}}">
                <label id="id-error" class="required-error hide" for="title">{{i18n "required"}}</label>
            </div>
            <div class="form-group">
                <label for="dashboard-description">{{i18n "description"}}</label>
                <textarea name="description" maxlength="500" class="form-control" id="dashboard-description"
                          placeholder="{{i18n "e.g.monthly.sales.statistics"}}" rows="3"></textarea>
            </div>
            <button type="button" class="btn btn-primary btn-bordered" id="btn-create-dashboard">{{i18n
                    "create.dashboard"}}</button>
        </div>
    </div>
</div>